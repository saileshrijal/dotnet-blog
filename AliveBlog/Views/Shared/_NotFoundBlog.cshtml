@{
    Layout = "_BlogLayout";
    ViewData["Title"] = "404 Not Found";
}

<div id="layoutError pt-20">
    <div id="layoutError_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="text-center my-4">
                            <img class="my-5 img-error" height="300" src="~/assets/img/error-404-monochrome.svg" />
                            <p class="lead">This requested URL was not found.</p>
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="text-decoration-none">
                                <i class="fas fa-arrow-left me-1"></i>
                                Return to Home
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
