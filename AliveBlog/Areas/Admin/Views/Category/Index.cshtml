@model List<Category>
@{
    ViewData["Title"] = "List Of Categories";
}

<div class="m-2">
    <div class="card shadow">
        <div class="card-header">
            <h2 class="card-title">List of Categories</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Category
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            <a class="btn btn-success float-end" asp-area="Admin" asp-controller="Category"
                                asp-action="Create"><i class="fa fa-random"></i> New
                                Category</a>
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>
                                @category.Title
                            </td>
                            <td>
                                @Html.Raw(category.Description)
                            </td>
                            <td>
                                <div class="btn-group float-end">
                                    <a class="btn btn-secondary" asp-area="Admin" asp-controller="Category"
                                    asp-action="Edit" asp-route-id="@category.Id"><i
                                        class="fa-solid fa-pen-to-square"></i></a>
                                    <button class="btn btn-danger"><i class="fa-solid fa-trash"></i> </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>