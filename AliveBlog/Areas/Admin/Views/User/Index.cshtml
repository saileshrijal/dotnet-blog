@model List<ApplicationUser>

@{
    ViewData["Title"] = "List Of Users";
}

<div class="m-2">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            FirstName
                        </th>
                        <th>
                            LastName
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            <a class="btn btn-success float-end" asp-area="Admin" asp-controller="User"
                                asp-action="Create"><i class="fa fa-user"></i> New
                                User</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                @user.FirstName
                            </td>
                            <td>
                                @user.LastName
                            </td>
                            <td>
                                @user.Email
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>