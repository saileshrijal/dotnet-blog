@model AliveBlog.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Log in";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header">
                        <h3 class="text-center font-weight-light my-4">Login</h3>
                    </div>
                    <div class="card-body">
                        <form id="loginForm" asp-action="Login" method="post">
                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" autocomplete="username"
                                    aria-required="true" />
                                <label asp-for="Email" class="form-label"></label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Password" class="form-control" autocomplete="current-password"
                                    aria-required="true" />
                                <label asp-for="Password" class="form-label"></label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" asp-for="RememberMe" />
                                <label class="form-check-label" asp-for="RememberMe"></label>
                            </div>

                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log
                                    in</button>
                            </div>
                        </form>
                    </div>
                </div>
                <a asp-action="Index" asp-controller="Home" asp-area="" class="d-block text-white
             text-center mt-3">Go
                    to
                    Home</a>
            </div>
        </div>
    </div>
</main>


@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}